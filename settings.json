{
    "editor.fontSize": 12,
    "editor.inlineSuggest.enabled": true,
    "editor.wordWrap": "bounded",
    "editor.minimap.enabled": false,
    "editor.rulers": [
        80
    ],
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.sortOrder": "type",
    "git.confirmSync": false,
    "git.autofetch": true,

    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook",
        "*.csv": "gc-excelviewer-csv-editor"
    },
    "latex-workshop.latex.outDir": "%DIR%/build",
    "latex-workshop.view.pdf.color.dark.backgroundColor": "#000000",
    "latex-workshop.view.pdf.color.dark.pageColorsBackground": "#000000",
    "latex-workshop.view.pdf.color.dark.pageColorsForeground": "#000000",
    "latex-workshop.view.pdf.color.dark.pageBorderColor": "#000000",
    "latex-workshop.view.pdf.invert": 0,
    "latex-workshop.view.pdf.invertMode.brightness": 1,
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "latex-workshop.message.badbox.show": false,
    "latex-workshop.message.error.show": false,
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "latexmk (xelatex)",
            "tools": [
                "xelatexmk"
            ]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex * 2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Jnw files",
            "tools": [
                "jnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Pnw files",
            "tools": [
                "pnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "tectonic",
            "tools": [
                "tectonic"
            ]
        }
    ],
       
       
    
}

