# -X sort with respect to file extension then name
# -A like -a without . and ..
# -h human readable file size
# -1 one line for each file
# --time-style=iso show time with 08-14 instead Aug 14

alias ll='ls -AlhFX --time-style=iso'
alias la='ls -AX'
alias l='ls -CFX'
alias lg='ls -lhX --time-style=iso | grep'
alias lf='ls -lhX --time-style=iso'
alias lv='ls -1X' 
alias lx='ls -X'
